	<display-name>Nebula REST Sample</display-name>

	<listener>
		<listener-class>it.trace.nebula.rest.sample.listener.ContainerContextListener</listener-class>
	</listener>

	<filter>
		<filter-name>nebule.rest</filter-name>
		<filter-class>it.trace.nebula.rest.dispatch.DispatcherFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>nebule.rest</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>

